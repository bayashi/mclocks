{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mclocks",
  "version": "0.2.9",
  "identifier": "com.bayashi.mclocks",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "mclocks",
        "hiddenTitle": true,
        "resizable": false,
        "minimizable": false,
        "maximizable": false,
        "width": 800,
        "height": 20,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": ["ipc://localhost"],
        "img-src": "'self' blob: data:",
        "style-src": "'unsafe-inline' 'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
